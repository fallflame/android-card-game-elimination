<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fallflame.tp1.WelcomeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Human vs. AI"
        android:id="@+id/humanVsAI"
        android:layout_above="@+id/humanVsHuman"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        android:onClick="humanVsAIButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HUMAN vs. HUMAN"
        android:id="@+id/humanVsHuman"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="humanVsHumanButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest Scores"
        android:id="@+id/history"
        android:layout_below="@+id/humanVsHuman"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:onClick="historyButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exit"
        android:onClick="exitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/humanVsAI"
        android:layout_alignStart="@+id/humanVsAI" />

</RelativeLayout>
