<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fallflame.tp1.GameControllerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/player0Name" />

    <TextView
        android:id="@+id/player1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score_text"
        android:rotation="180"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/player0Score"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/player0Name"
        android:layout_toEndOf="@+id/player0Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/player1Score"
        android:rotation="180"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/player1Name"
        android:layout_toStartOf="@+id/player1Name" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/player1Light"
        android:background="#ffff0000"
        android:layout_alignTop="@+id/player1Score"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/player0Light"
        android:background="#ff00ff00"
        android:layout_alignBottom="@+id/player0Score"
        android:layout_centerHorizontal="true" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="256dp"
        android:layout_height="384dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage0"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage2"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage3"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="4dp" />



        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage5"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage6"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage7"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="4dp" />


        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage8"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage9"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage10"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage11"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="4dp" />


        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage12"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage13"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage14"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage15"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="4dp" />


        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage16"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage17"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage18"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage19"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_margin="4dp" />


        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage20"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage21"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage22"

            android:layout_row="5"
            android:layout_column="2"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cardback"
            android:id="@+id/cardImage23"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_margin="4dp" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="×"
        android:id="@+id/quit"
        android:onClick="quitButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
